{
    "name": "crx-livereload",
    "version": "0.0.0",
    "description": "Chrome Extension Live Reloader",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/crx-livereload"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/crx-livereload/issues"
    },
    "homepage": "https://github.com/iamogbz/crx-livereload#readme",
    "license": "GPL-3.0",
    "keywords": [
        "chrome",
        "extension",
        "plugin",
        "chrome extension",
        "chrome plugin",
        "hot reload",
        "auto reload",
        "live reload",
        "file monitor",
        "watchdog",
        "watch code",
        "reload",
        "crx"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "lib/main.js",
    "scripts": {
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development  --watch",
        "commit": "git-cz",
        "commitlint": "commitlint-travis",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "lint": "eslint",
        "release": "semantic-release",
        "test": "jest",
        "test-watch": "jest --watch",
        "typecheck": "tsc --noEmit"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/github"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "collectCoverageFrom": [
            "./src/**"
        ],
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "setupFilesAfterEnv": [
            "./tests/setup.ts"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "rules": {
            "header-max-length": [0, "always", 0]
        },
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ],
        "*.ts": [
            "tslint"
        ],
        "*.{js,ts}": [
            "jest --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.0",
        "@babel/preset-env": "^7.16.5",
        "@babel/preset-typescript": "^7.16.5",
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@commitlint/travis-cli": "^15.0.0",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/github": "^8.0.2",
        "@types/chrome": "0.0.170",
        "@types/copy-webpack-plugin": "^10.1.0",
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.13",
        "@types/sinon-chrome": "^2.2.11",
        "@types/source-map": "^0.5.2",
        "@types/webpack": "^5.28.0",
        "acorn": "^8.6.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.2.3",
        "babel-runtime": "^6.26.0",
        "commitizen": "^4.2.4",
        "coveralls": "^3.1.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^19.0.2",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^3.4.1",
        "husky": "^7.0.4",
        "jest": "^25.5.4",
        "lint-staged": "^12.1.2",
        "prettier": "^1.19.1",
        "prettier-eslint": "^13.0.0",
        "prettier-tslint": "^0.4.2",
        "rxjs": "^7.4.0",
        "semantic-release": "^18.0.1",
        "sinon-chrome": "^3.0.1",
        "ts-jest": "^25.5.1",
        "ts-node": "^10.4.0",
        "tslint": "^6.1.3",
        "typescript": "^3.9.10",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1"
    }
}
